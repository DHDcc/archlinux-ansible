[Trigger]
Operation = Install
Operation = Upgrade
Type = Package
Target = grub

[Action]
Description = Reinstallation of grub + config
When = PostTransaction
Exec = /bin/sh -c '/usr/bin/grub-install --target=x86_64-efi --efi-directory=/boot/efi --bootloader-id=GRUB && /usr/bin/grub-mkconfig -o /boot/grub/grub.cfg'
